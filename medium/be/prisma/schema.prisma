generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}
enum Role {
  User
  Admin
}



model User {
  id Int @id @default(autoincrement())
  username String 
  email String @unique
  password String
  profilePic String?
  userType Role @default(User)
  blog Blog[]
}

model Blog {
  id Int @id @default(autoincrement())
  blogTitle String
  blogHeroImage String?
  blogContent String
  blogImage BlogImage[]
  user User @relation(fields: [userId], references: [id])
  userId Int
}

model BlogImage {
  id Int @id @default(autoincrement())
  url String
  blog Blog @relation(fields: [blogId] , references: [id])
  blogId Int
}