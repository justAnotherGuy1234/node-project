generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Hotel {
  id Int @id @default(autoincrement())
  name String
  address String @unique
  rating Int? // average rating based on all ratings
  ratingCount Int?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  room Room[]
  roomBooked RoomBooked[]
}

model Room {
  id Int @id @default(autoincrement())
  hotel Int
  roomType RoomType
  price Decimal @db.Decimal(8 , 2)
  roomCount Int
  dataOfAvailability DateTime
  hotelId Hotel @relation(fields: [hotel] , references: [id])
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model RoomBooked {
  id Int @id @default(autoincrement())
  hotel Int
  userId Int
  pricePayed Decimal @db.Decimal(8 , 2)
  startDate DateTime
  endDate DateTime
  roomType RoomType 
  hotelId Hotel @relation(fields: [hotel] , references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}


enum RoomType {
  SINGLE 
  DOUBLE
  FAMILY
}