generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum Role {
  user
  admin
}

model User {
  id Int @id @default(autoincrement())
  username String 
  email String @unique
  password String
  userType Role @default(user)
  problem Problem[]
}


model Problem {
  id Int @id @default(autoincrement())
  userId Int
  question String @unique
  difficulty String 
  testCases Bytes
  user User @relation(fields: [userId] , references: [id])
}